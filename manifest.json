{
   "manifest_version": 2,
   "name": "__MSG_app_name__",
   "short_name": "__MSG_app_short_name__",
   "description": "__MSG_app_description__",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "default_locale": "en",
   "version": "0.3.5",
   "author": "raingart",
   "homepage_url": "https://github.com/raingart/YouTubeCore-extension",
   "permissions": [
      "storage",
      "tabs",
      "*://www.youtube.com/*"
   ],
   "background": {
      "page": "/html/background.html",
      "persistent": true
   },
   "content_scripts": [{
      "exclude_globs": [ "*/embed/*" ],
      "matches": [ "*://www.youtube.com/*" ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
         "/js/inject/plugins.js",
         "/js/inject/ytc_lib.js",
         "/js/inject/contentApp.js"
      ],
      "css": []
   }],
   "web_accessible_resources": [
      "/js/inject/ytc_lib.js",
      "/plugins/*"
   ],
   "icons": {
      "16": "/icons/16.png",
      "48": "/icons/48.png",
      "128": "/icons/128.png"
   },
   "options_page": "/html/options.html",
   "options_ui": {
      "chrome_style": false,
      "page": "/html/options.html"
   },
   "browser_action": {
      "default_icon": {
         "16": "/icons/16.png",
         "48": "/icons/48.png",
         "128": "/icons/128.png"
      },
      "default_popup": "/html/options.html"
   }
}
